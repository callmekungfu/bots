{
  "name": "stack-test",
  "version": "1.0.0",
  "private": true,
  "description": "Stack Test App",
  "author": "Yong Lin <wangyonglin1999@gmail.com>",
  "license": "ISC",
  "repository": "https://github.com/callmekungfu/bots.git",
  "homepage": "https://github.com/callmekungfu/bots",
  "bugs": "https://github.com/callmekungfu/bots/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start:dev": "concurrently --kill-others \"npm run build:watch\" \"npm run dev:watch\"",
    "build:watch": "tsc -w -p tsconfig.json",
    "dev:watch": "sleep 3s && npm run dev",
    "dev": "nodemon --exec \"npm run start\"",
    "start": "probot run ./lib/index.js",
    "lint": "standard **/*.ts --fix",
    "test": "jest && standard **/*.ts",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "probot": "^9.5.3"
  },
  "devDependencies": {
    "@types/jest": "^24.0.19",
    "@types/nock": "^11.1.0",
    "@types/node": "^13.1.0",
    "@typescript-eslint/parser": "^2.4.0",
    "eslint-plugin-typescript": "^0.14.0",
    "jest": "^24.9.0",
    "nock": "^11.4.0",
    "nodemon": "^2.0.0",
    "smee-client": "^1.1.0",
    "standard": "^14.3.1",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.4"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "parser": "@typescript-eslint/parser",
    "env": [
      "jest"
    ],
    "plugins": [
      "typescript"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
